    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            max-width: 1020px;
            margin: auto;
            font-size: 10px;
        }

        * {
            margin: 0;
        }

        @media print {
            .card {
                break-inside: avoid;
            }
        }

        /* Contenido principal**/
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            margin: 2rem 2rem;
        }

        /****/

        /*** Titulos alto contraste ***/
        .title-black {
            background-color: black;
            padding: 0.5rem 0.5rem;
        }

        .title-black h3,
        .title-black p {
            color: white;
            text-align: center;

        }


        .card-reference {
            text-align: center;
            width: 200px;
        }

        .card-brandlogos {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card-row {
            display: flex;
            justify-content: space-between;

        }

        .card-row .caption {
            width: 150px;
        }

        .card-row .val {
            width: 100%;
            font-weight: bolder;
        }

        .card-banks {
            padding: 0.5rem;
            margin: auto;
        }

        .tabla1 {
            display: grid;
            grid-template-columns: 150px 120px;

        }

        .tabla1 div {
            border: 1px solid #9E9E9E;
            padding: 0.3rem;
        }

        .tabla2 {
            display: grid;
            grid-template-columns: 100px 80px 100px;

        }

        .tabla2 div {
            border: 1px solid #9E9E9E;
            padding: 0.3rem;
        }

        .tabla2 div p {
            font-weight: bolder;
            font-size: 8px;
        }

        .logo-container {
            padding: 0rem;
        }

        img {
            width: 100%;
        }

        svg {
            height: 50px;
            width: 100%;
        }

        .pt-sm {
            padding-top: 0.5rem;
        }

        .pd-nm {
            padding: 1rem;
        }

        .pd-sm {
            padding: 0.2rem;
        }

        .fw-bold {
            font-weight: bolder;
        }

        .margin-top {
            margin-top: 0.5rem
        }

        .text-center {
            text-align: center;
        }

        .fs-sm {
            font-size: 8px;
        }

        .fs-md {
            font-size: 16px;
        }

        .fs-xl {
            font-size: 22px;
        }

        .lh-sm {
            line-height: 0.7rem;
        }

        table,
        th,
        td {
            border: 1px solid #9e9e9e95;
            border-collapse: collapse;

        }


        .bank-logo-container {
            width: 80px;
        }

        .table-note {
            font-size: 8px;
            line-height: 0.8rem;
            padding: 0.7rem;
            text-align: center;
        }

        .bk-gray-low {
            background: rgb(223, 223, 223);
        }

        .bk-gray-med {
            background: rgb(188, 187, 187);
        }


        .wd10 {
            width: 10px;
        }

        .wd20 {
            width: 20px;
        }

        .wd30 {
            width: 30px;
        }

        .wd40 {
            width: 40px;
        }

        .wd50 {
            width: 50px;
        }

        .wd60 {
            width: 60px;
        }

        .wd70 {
            width: 70px;
        }

        .wd80 {
            width: 80px;
        }

        .wd90 {
            width: 90px;
        }

        .wd100 {
